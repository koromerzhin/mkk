{% extends "MkkSiteBundle:Templates:screen.html.twig" %}
{% from "MkkSiteBundle:Blocks:screen.html.twig" import flashbag,
logo %}
{% block body %}
	{{ parent() }}
	{% if param['login_videobackground']is defined and param['login_videobackground'] != "" %}
		{% set mute = "true" %}
		{% if param['login_ideobackgroundmute']is defined %}
			{% set mute = param['login_ideobackgroundmute'] %}
		{% endif %}
		<a class="player" data-property="{videoURL: '{{ param['login_videobackground'] }}', containment:'body', autoPlay:true, mute:{{ mute }}, startAt:0, opacity:1, ratio:'4/3', addRaster:true, showControls:true}">My video</a>
	{% endif %}
	<section>
		{{ logo(param) }}
		{{ flashbag(app) }}
		<div class="page-login{% if param[" image_logo"] is defined and param[" image_logo"] != " " %} page-login-logo{% endif %}">
			<h1>
				{% if param['disabled_titre']is defined and param['disabled_titre'] != "" %}
					{{ param['disabled_titre']|raw }}
				{% else %}
					DÃ©sactivation du site
				{% endif %}
				<br/>
				{% if param['disabled_soustitre']is defined and param['disabled_soustitre'] != "" %}
					<span>{{ param['disabled_soustitre']|raw }}</span><br/>
				{% endif %}
			</h1>
			{% if param['desactivation_raison']is defined and param['desactivation_raison'] != "" %}
				<blockquote>
					{{ param['desactivation_raison']|raw }}
				</blockquote>
			{% endif %}
		</div>
	</section>
{% endblock %}
